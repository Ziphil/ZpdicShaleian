{
  "name": "zpdic-shaleian",
  "version": "1.0.0",
  "author": "Ziphil",
  "description": "Desktop application for manipulating the new Shaleian dictionary format",
  "main": "dist/index.js",
  "homepage": "https://github.com/Ziphil/ZpdicShaleian",
  "scripts": {
    "develop": "cross-env NODE_ENV=development webpack --watch --mode development --config webpack-develop.ts",
    "build": "webpack --mode production --config webpack-product.ts",
    "pack:windows": "electron-builder -w",
    "pack:mac": "electron-builder -m",
    "pack:linux": "electron-builder -l",
    "start": "electron dist/index.js",
    "lint": "eslint renderer/**/*.ts renderer/**/*.tsx main/**/*.ts",
    "lint:fix": "eslint --fix renderer/**/*.ts renderer/**/*.tsx main/**/*.ts"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "ignorePatterns": "webpack-*.ts"
  },
  "build": {
    "appId": "com.ziphil.zpdic-shaleian",
    "productName": "ZpDIC for Shaleian",
    "artifactName": "zpdic-shaleian-setup.${ext}",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "product"
    },
    "publish": null,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@blueprintjs/core": "^3.44.0",
    "@blueprintjs/popover2": "^0.4.0",
    "@blueprintjs/select": "^3.16.0",
    "axios": "^0.21.1",
    "codemirror": "^5.61.0",
    "electron-connect": "^0.6.3",
    "execa": "^5.1.1",
    "form-data": "^4.0.0",
    "jsonify-type": "^1.0.0",
    "lodash-es": "^4.17.21",
    "mobx": "^6.2.0",
    "mobx-react": "^7.1.0",
    "query-string": "^7.0.0",
    "react": "^16.14.0",
    "react-codemirror2": "^7.2.1",
    "react-css-modules": "^4.7.11",
    "react-dom": "^16.14.0",
    "react-hotkeys": "^2.0.0",
    "react-infinite-scroller": "^1.2.4",
    "react-intl": "^5.16.0",
    "reflect-metadata": "^0.1.13",
    "serialize-error": "^8.1.0",
    "simple-git": "^2.38.0",
    "soxsot": "^0.8.2",
    "soxsot-format": "^0.1.1",
    "ts-essentials": "^7.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@types/codemirror": "^0.0.108",
    "@types/lodash-es": "^4.17.4",
    "@types/react": "^17.0.3",
    "@types/react-css-modules": "^4.6.2",
    "@types/react-dom": "^17.0.3",
    "@types/react-infinite-scroller": "^1.2.1",
    "@types/uuid": "^8.3.0",
    "@types/webpack-merge": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "electron": "^25.5.0",
    "electron-builder": "^24.6.3",
    "electron-reload-webpack-plugin": "^2.0.4",
    "eslint": "^8.17.0",
    "eslint-config-ziphil": "^1.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "html-webpack-plugin": "^5.3.1",
    "json-loader": "^0.5.7",
    "node-sass": "^7.0.1",
    "sass-loader": "^12.6.0",
    "source-map-loader": "^2.0.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.2.4",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.7.3",
    "yaml-flat-loader": "^1.0.2"
  },
  "volta": {
    "node": "16.20.2"
  }
}
